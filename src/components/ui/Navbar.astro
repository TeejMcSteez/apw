<script is:inline>
	let isActive = false;
	const toggleDrop = () => {
		if (!isActive) {
			const d = document.getElementById("dropdown")
			d.style.display = "none";
			const dc = document.getElementById("dropdownContent")
			dc.style.display = "flex"
			isActive = true
		} else {
			const d = document.getElementById("dropdown")
			d.style.display = "flex";
			const dc = document.getElementById("dropdownContent")
			dc.style.display = "none"
			isActive = false
		}
	}
</script>

