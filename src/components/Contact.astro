<div class="container">
    <div
      id="buttonSection"
      class="flex flex-col justify-center items-center p-1 border-t-4 border-l-4 border-red-800 max-w-[25vh]"
    >
      <a
        id="button"
        class="contactbtn"
        href="https://www.instagram.com/tj_hall04/"
        target="_blank"
        >Instagram</a
      >
      <a
        id="button"
        class="contactbtn"
        href="https://github.com/TeejMcSteez"
        target="_blank"
        >GitHub</a
      >
      <a
        id="button"
        class="contactbtn"
        href="https://www.linkedin.com/in/tommyhall047/"
        target="_blank"
        >LinkedIn</a
      >
      <a
        id="button" 
        class="contactbtn"
        href="https://bsky.app/profile/teejmcsteez.bsky.social"
