<style>
    .container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    #buttonSection {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-top: 30vh;
        padding: 1rem;
        border-left: 1rem;
        border-color: red;
        max-width: 25vh;
    }
    .contactbtn {
      margin: 1rem;
      padding: .5rem;
      text-decoration: none;
      color: black;
      background-color: #c4b5fd;
      border-radius: 1rem;
    }
    @media (prefers-color-scheme: dark) {
      .contactbtn {
        color: white;
        background-color: #8b5cf6;
      }
      button {
        color: white;
      }
    }
    button {
      border: none;
      background: none;
    }
</style>